		"show posts",
		"embed blog posts",
		"custom posts"
	],
	"textdomain": "advanced-post-block",
	"attributes": {
		"align": {
			"type": "string",
			"default": "wide"
		},
		"cId": {
			"type": "string",
			"default": ""
		},
		"layout": {
			"type": "string",
			"default": "grid"
		},
		"subLayout": {
			"type": "string",
			"default": "default"
		},
		"columns": {
			"type": "object",
			"default": {
				"desktop": 3,
				"tablet": 2,
				"mobile": 1
			}
		},
		"columnGap": {
			"type": "number",
			"default": 15
		},
		"rowGap": {
			"type": "number",
			"default": 15
